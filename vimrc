set runtimepath+=~/.vim/vimrcs

" All basic configs that tend not to be changed
source ~/.vim/vimrcs/basic.vim

" Some config you may want to switch on/off
source ~/.vim/vimrcs/extended.vim

" All basic non plugin related shortcuts
source ~/.vim/vimrcs/shortcuts.vim

" Plugins and their configs and shortcuts
source ~/.vim/vimrcs/plugins.vim
